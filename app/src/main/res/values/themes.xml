<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CouchPotatosPlan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/basic</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlActivated">@color/basic</item>
        <item name="colorControlHighlight">@color/basic</item>
        <item name="android:textColor">@color/basic</item>
        <item name="android:colorAccent">@color/basic</item>
    </style>
    <style name="AlertDialogCustomStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">#595959</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorAccent">@color/basic</item>
    </style>

    <style name="MyCheckBox_basic" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/basic</item>
    </style>
</resources>